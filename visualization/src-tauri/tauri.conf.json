{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Astrolabe",
  "version": "0.1.8",
  "identifier": "com.astrolabe.app",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Astrolabe",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "/"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/astrolabe-server"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "astrolabe"
        ]
      }
    },
    "shell": {
      "open": true
    }
  }
}
